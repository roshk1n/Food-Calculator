<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:padding="10dp"
    tools:context="com.example.roshk1n.foodcalculator.main.fragments.infoFood.InfoFoodFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp">

            <TextView
                android:id="@+id/tv_name_food_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Milk dessert"
                android:textColor="@color/colorPrimaryText"
                android:textSize="23sp" />

            <TextView
                android:id="@+id/tv_value_por_food_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name_food_info"
                android:layout_marginTop="15dp"
                android:text="Serving size:"
                android:textColor="@color/colorSecondaryText"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/et_value_por_food_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_value_por_food_info"
                android:layout_toLeftOf="@+id/tv_measure_food_info"
                android:padding="5dp"
                android:textSize="17sp"
                android:text="100"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryText" />

            <TextView
                android:id="@+id/tv_measure_food_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/et_value_por_food_info"
                android:layout_alignParentRight="true"
                android:text="g."
                android:textColor="@color/colorPrimaryText"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/number_of_servings_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_value_por_food_info"
                android:layout_marginTop="15dp"
                android:text="Number of Servings:"
                android:textColor="@color/colorSecondaryText"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/number_of_servings_et"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/number_of_servings_tv"
                android:layout_alignParentRight="true"
                android:text="1"
                android:textAlignment="center"
                android:padding="8dp"
                android:maxLength="4"
                android:inputType="number"
                android:textSize="17sp"
                android:textColor="@color/colorPrimaryText" />

            <LinearLayout
                android:id="@+id/content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/number_of_servings_tv"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_cabs_food_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="1,0"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Carbs (g)"
                        android:textColor="@color/colorSecondaryText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_fat_food_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="17,0"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Fat (g)"
                        android:textColor="@color/colorSecondaryText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_protein_food_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="17,0"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Protein (g)"
                        android:textColor="@color/colorSecondaryText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_calories_food_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="247"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Calories"
                        android:textColor="@color/colorSecondaryText" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/add_food_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/content_layout"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:text="Add food"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryText" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
