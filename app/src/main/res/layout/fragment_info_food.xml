<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context="com.example.roshk1n.foodcalculator.main.fragments.infoFood.InfoFoodFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/tv_name_food_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Milk dessert"

                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_value_por_food_info"
                android:layout_width="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_name_food_info"
                android:text="Value of the portions:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_value_por_food_info"
                android:layout_width="60dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_value_por_food_info"
                android:layout_toLeftOf="@+id/tv_measure_food_info"
                android:text="100" />
            <TextView
                android:id="@+id/tv_measure_food_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="g."
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@id/et_value_por_food_info"
                android:textSize="16sp"/>

            <LinearLayout
                android:id="@+id/content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@id/tv_value_por_food_info">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_cabs_food_info"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:text="1,0"
                        android:textColor="#000000"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Carbs (g)"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_fat_food_info"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:text="17,0"
                        android:textColor="#000000"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Fat (g)"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_protein_food_info"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:text="17,0"
                        android:textColor="#000000"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Protein (g)"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_calories_food_info"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:text="247"
                        android:textColor="#000000"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Calories"/>

                </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/add_food_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Add food"
                android:layout_centerInParent="true"
                android:textAllCaps="false"
                android:layout_below="@id/content_layout"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
